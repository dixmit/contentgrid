<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-inherit="mail.Chatter" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('o-mail-Followers')]" position="before">
            <button
                t-if="state.thread and state.thread.contentgrid"
                class="btn btn-link text-action"
                t-on-click="onClickContentGrid"
            >
                <i
                    class="fcg fcg-contentgrid"
                    aria-hidden="ContentGrid"
                    title="ContentGrid"
                />
            </button>
        </xpath>
        <xpath expr="//button[hasclass('o-mail-Chatter-activity')]" position="after">
            <button
                t-if="state.thread.sendContentGrid"
                class="o-mail-Chatter-sendContentGrid btn btn-secondary text-nowrap ms-1"
                t-att-class="{ 'my-2': !props.compactHeight }"
                t-on-click="oClickSendContentGrid"
            >
                <i
                    class="fcg fcg-contentgrid"
                    aria-hidden="ContentGrid"
                    title="ContentGrid"
                />
                <span>
                            Send Content Grid
                        </span>
            </button>
        </xpath>
    </t>
</templates>
